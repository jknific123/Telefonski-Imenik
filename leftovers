





    public static void connectToAndQueryDatabase(String username, String password) throws SQLException {

        Connection con = DriverManager.getConnection(
                             "jdbc:postgresql://localhost:5432/kontakti",
                             username,
                             password);


        ArrayList<Kontakt> trenutniKontakti = new ArrayList<Kontakt>();
        Statement stmt = con.createStatement();
        ResultSet rs = stmt.executeQuery("SELECT * FROM kontakt");

            while (rs.next()) {
                trenutniKontakti.add(getKontaktFromRS(rs));
            }

        for (Kontakt kontakt : trenutniKontakti) {
            System.out.println(kontakt.toString());
        }
    }